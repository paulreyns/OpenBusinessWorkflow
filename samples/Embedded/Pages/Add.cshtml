@page
@model AddModel
@{
    ViewData["Title"] = "Add Claim";
}

<form method="post">
    <fieldset>
        <legend>Add</legend>
        <div class="form-group">
            <input asp-for="Id" type="hidden" />
        </div>
        <div class="form-group">
            <label for="Name">Name:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>&nbsp;</label>
            <input type="submit" class="btn btn-primary" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>
