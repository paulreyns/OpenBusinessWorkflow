@page
@model IndexModel
@{
    ViewData["Title"] = "Claims";
}
<h1>@ViewData["Title"]</h1>

@{
    <a href="/Add">Add</a>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var claim in ViewData.Model._claims)
        {
            var url = "/Edit/" + claim.Id;
        <tr>
            <td>
                <a href=@url>
                    @claim.Id
                </a>
            </td>
            <td>
                @claim.Name
            </td>
        </tr>
        }    
        </tbody>
    </table>
    
}
